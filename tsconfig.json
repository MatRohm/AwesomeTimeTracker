{
    "compilerOptions": {
        "outDir": "./_dist/",
        "sourceMap": true,
        "noImplicitAny": true,
        "module": "es6",
        "target": "es6",
        "jsx": "react",
        "allowJs": true,
        "strict": true,
        "lib": [
            "es6",
            "es2015",
            "dom"
        ],
        "types": [
            "jest"
        ],
        "moduleResolution": "node",
        "esModuleInterop": true,
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ]
}