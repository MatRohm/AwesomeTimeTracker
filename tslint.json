{
    "defaultSeverity": "error",
    "extends": [
        "tslint:recommended"
    ],
    "jsRules": {},
    "rules": {
      "no-any": true,
      "semicolon": [true,"always"],
      "arrow-parens": false,
      "arrow-return-shorthand" : true,
      "curly": [true,"as-needed"],
      "no-arg":true,
      "quotemark": [true,"single"],
      "indent": [true, "spaces", 2]
    },
    "rulesDirectory": []
}