{
    "defaultSeverity": "warning",
    "extends": [
        "tslint:recommended"
    ],
    "linterOptions": {"exclude": ["_app/**", "node_modules/**"]},
    "jsRules": {
        "quotemark": [true, "single"],
        "curly": true,
        "object-literal-sort-keys": false
    },
    "rules": {
        "no-any": true,
        "semicolon": [true,"always"],
        "arrow-parens": false,
        "arrow-return-shorthand": true,
        "curly": true,
        "no-arg": true,
        "quotemark": [
            true,
            "single",
            "jsx-single"
        ],
        "indent": [
            true,
            "spaces",
            2
        ],
        "max-line-length": [
            true,
            300
        ],
        "no-empty":true,
        "no-console": false,
        "object-literal-sort-keys": false,
        "trailing-comma": false,
        "member-access": [true, "check-accessor"],
        "ordered-imports": false,
        "variable-name":false
    },
    "rulesDirectory": []
}